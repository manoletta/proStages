<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}{% endblock %}</title>
  {% block stylesheets %}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  {% endblock %}
</head>
<body>
  <!--Barre de navigation-->
  {% block menu %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="navbar-toggler-icon"></span>
          </button> <a class="navbar-brand" href="{{path('proStages_home')}}">ProStages</a>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="{{path('proStages_entreprises')}}">Entreprises</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{path('proStages_formations')}}">Formations</a>
              </li>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>
</div>
{% endblock %}

<!--Zone de tri-->
{% block tri %}
<div class="container-fluid">
  <div class="row" style="margin-top: 20px">
    <div class="col-md-9">
      {% block body %}{% endblock %}
    </div>
    <div class="col-md-3">
      <div class="card" style="width: 14rem;">
        <div class="card-header">
          Afficher les stages par :
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><a href="{{path('proStages_entreprises')}}">Entreprises</a></li>
          <li class="list-group-item"><a href="{{path('proStages_formations')}}">Formations</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endblock %}


<!--Footer-->
{% block footer %}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12" style="text-align:center; margin-top: 20px; background-color: #F2F2F2">
      <p>Projet élaboré avec <a href="https://symfony.com" target="blank">Symfony</a> et <a href="https://getbootstrap.com" target="blank">BootStrap</a> dans le cadre du module M3104</p>
    </div>
  </div>
</div>
{% endblock %}

<!--Elements javascripts BootStrap-->
{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
